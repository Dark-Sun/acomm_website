!!!
%html
  
  %head
    %title Androcommerce
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    
    %link{:rel => 'stylesheet', :href => "//releases.flowplayer.org/5.5.0/skin/minimalist.css"}
    %script{:src => "http://releases.flowplayer.org/5.5.0/flowplayer.min.js"}

    %script{ src: "http://maps.googleapis.com/maps/api/js?sensor=false" }
    = csrf_meta_tags

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" }
    / %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge" }

    = javascript_include_tag 'respond', 'data-turbolinks-track' => true   
    = javascript_include_tag 'html5shiv.min.js'
    <!--[if lte IE 8]>
    %link{ :rel => "stylesheet", :href => "http://fonts.googleapis.com/css?family=Roboto+Condensed"}
    <![endif]-->
  %body
    = render 'layouts/vendors_navbar'
    #content.clearfix
      = yield
    = render 'layouts/footer'